<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background_color">


    <ImageView
        android:id="@+id/ivPlanet"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/planet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        app:srcCompat="@drawable/alien"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="450dp"
        tools:layout_editor_absoluteY="287dp" />



    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/satellite"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/observatory"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/rocket_icon"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/spaceship"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/astronaut"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/telescope"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/rocket"
        app:layout_constraintCircle="@+id/ivPlanet"
        app:layout_constraintCircleAngle="360"
        app:layout_constraintCircleRadius="@dimen/_80sdp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/rocketIcon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/moon"
        app:layout_constraintCircle="@id/ivPlanet"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="@dimen/_130sdp"
        tools:ignore="MissingConstraints" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Off"
        android:textColor="@color/dark_blue_color"
        android:textStyle="bold"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>